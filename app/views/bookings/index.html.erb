<h1>My bookings</h1>

<h2>My geeks</h2>
<% @my_geeks.each do |geek| %>
  <p><%= geek.offer.user.first_name %> <%= geek.offer.user.last_name %></p>
  <p><%= geek.offer.title %></p>
  <p><%= geek.offer.description %></p>
  <p>Reserved for: <%= geek.offer.date%></p>
<% end %>

<h2>My missions</h2>
<% @bookings.each do |booking| %>
    <% if booking.offer.user.id == current_user.id %>
    <p>You will be working for <%= booking.user.first_name %> <%= booking.user.last_name %></p>
    <p>On <%= booking.offer.date %></p>
  <% end %>
<% end %>
