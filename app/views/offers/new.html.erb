<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1>Become a geek!</h1>
    <p>Create your dev offer. </p>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col"></div>
      <%= simple_form_for @offer do |f| %>
      <%=f.input :title %>
      <%=f.input :description %>
      <%=f.input :price %>
      <%=f.input :date %>
      <%=f.input :experience %>
      <%=f.input :profession %>
      <%=f.input :localisation %>
      <%=f.submit "Become a geek!" %>
      <% end %>
  </div>
</div>
