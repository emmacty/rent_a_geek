
<div class="text-center">
  <h2>Which geek for your project ?</h2>
</div>

<%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder= "Search" />
    <button name="button" type="submit" class="btn btn-primary">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>

<div class="cards">
  <% @offers.each do |offer|%>
    <div class="card" style="width: 18rem;">
      <%= cl_image_tag offer.user.photo.key %>
      <div class="image-elements">

        <h2><%= offer.user.first_name %> <%= offer.user.last_name %></h2>
        <h5><i class="fa-solid fa-location-dot"></i><%= offer.localisation %></h5>

        <hr>
      </div>
      <div class="card-body">
        <p>Price: <%= offer.price %>â‚¬</p>

        <div class="title">
          <h5 class="card-title"><%= offer.title %></h5>
        </div>
        <p class="card-text"><%= offer.description %></p>
    </div>
          <div class="btn-view-offer">
          <%= link_to "View offer", offer_path(offer), class: "btn btn-primary" %>
            <div class="date">
              <%= offer.date %>
            </div>
            <div class="heart">
              <i class="fa-regular fa-heart"></i>
            </div>
          </div>
        </div>
  <% end %>
</div>
<div class="btn-new">
  <%= link_to "New", "/offers/new", class:"btn btn-primary", id:"new_btn"%>
</div>
