<h2>Which geek for your project ?</h2>

<hr>

<%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>

<div class="cards">
  <% @offers.each do |offer|%>
    <div class="card" style="width: 18rem;">
      <%= cl_image_tag offer.user.photo.key %>
      <div class="image-elements">
        <i class="fa-solid fa-heart"></i>

        <h2><%= offer.user.first_name %> <%= offer.user.last_name %></h2>
        <h5><i class="fa-solid fa-location-dot"></i><%= offer.localisation %></h5>

        <hr>
      </div>
      <div class="card-body">
        <p>Price: <%= offer.price %>â‚¬</p>

        <div class="title">
          <h5 class="card-title"><%= offer.title %></h5>
        </div>
        <p class="card-text"><%= offer.description %></p>
        <a href="#" class="btn btn-primary">View offer</a>
        <%= offer.date %>
      </div>
    </div>
  <% end %>
</div>
<%= link_to "New", "/offers/new" %>
