<div class="container mb-3">
  <div class="row">
    <div class="col"></div>
    <%= simple_form_for @offer do |f| %>
  <%= f.input :model, label: 'Marque',
               hint: 'Shortly describe the service you would like to provide' %>
  <%= f.input :brand, label: 'Model' %>
  <%= f.input :price_per_day, label: 'Prix journalier en euros' %>
  <%= f.input :date, label: 'Disponibilité',
            as: :string,
            input_html: { data: { controller: "datepicker", mode: "range" } } %>
  <%= f.input :year_of_production, label: 'Année de construction' %>
  <%= f.input :localisation,
  input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
  wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
  %>
  <%= f.submit "Soumettre", class: "btn btn-danger" %>
  <% end %>
  </div>
</div>
