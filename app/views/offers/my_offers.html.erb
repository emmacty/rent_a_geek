<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1542831371-29b0f74f9713?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80);">
  <div class="container">
    <h1 style="color: #F0544F; font-weight: bold;">My offers</h1>
    <h2 style="color: #A8DDCE; ">Browse all your offers</h2>
  </div>
</div>
<div class="container mt-5">
  <div class="cards">
    <% @my_offers.each do |offer|%>
      <div class="card" style="width: 18rem;">
        <%= cl_image_tag(offer.user.photo.key, :height=>300, :width=>300, :crop=>"fill")%>
        <div class="image-elements">

          <h2><%= offer.user.first_name %> <%= offer.user.last_name %></h2>
          <h5><i class="fa-solid fa-location-dot"></i><%= offer.localisation %></h5>

          <hr>
        </div>
        <div class="card-body">
          <p>Price per day: <%= offer.price %>â‚¬</p>

          <div class="title">
            <h5 class="card-title"><%= offer.title %></h5>
          </div>
          <p class="card-text"><%= offer.description %></p>
          <p class="card-text"><%= offer.date %></p>
      </div>
            <div class="btn-view-offer">
            <%= link_to "View offer", offer_path(offer), class:"btn btn-danger d-block" %>
              <!-- <div class="heart">
                <i class="fa-regular fa-heart"></i>
              </div>-->
            </div>
          </div>
    <% end %>
  </div>
</div>
